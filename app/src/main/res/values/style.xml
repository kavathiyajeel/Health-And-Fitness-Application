<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.AppCompat.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_icon_round</item>
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="postSplashScreenTheme">@style/Theme.Health_And_Fitness</item>
    </style>

    <style name="CustomDatePickerDialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/lblack</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/green</item>
        <item name="android:colorControlActivated">@color/green</item>
        <item name="android:backgroundTint">@color/lblack</item>
        <item name="android:dialogCornerRadius" tools:targetApi="p">10dp</item>
    </style>

    <style name="CustomTimePickerDialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:textColorPrimary">@color/green</item>
        <item name="colorAccent">@color/lblack</item>
        <item name="android:backgroundTint">@color/lblack</item>
        <item name="android:dialogCornerRadius" tools:targetApi="p">10dp</item>
    </style>

    <style name="CustomAlertDialogStyle" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/lblack</item>
        <!--<item name="android:background">@color/lblack</item>-->
        <item name="android:textColorPrimary">@color/green</item>
        <item name="android:textColor">@color/green</item>
        <item name="colorSurface">@color/white</item>
        <item name="android:dialogCornerRadius" tools:targetApi="p">10dp</item>
    </style>

    <style name="CustomAlertDialogStyleEditText" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/lblack</item>
        <!--<item name="android:background">@color/lblack</item>-->
        <item name="android:textColorPrimary">@color/green</item>
        <item name="android:textColor">@color/green</item>
        <item name="colorSurface">@color/white</item>
        <item name="android:dialogCornerRadius" tools:targetApi="p">10dp</item>
    </style>
</resources>